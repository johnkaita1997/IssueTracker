<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="20dp"
    android:elevation="20dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="3dp">


        <LinearLayout
            android:id="@+id/linearLadfyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/f_Image"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:src="@drawable/personb"
                android:text="Created At"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/f_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="This is a sample long tittle"
                        android:textColor="@color/mainicolor"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/f_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/moneybag"
                        android:drawablePadding="5dp"
                        android:text="400"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/f_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No name"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_marginTop="1dp"
                            android:id="@+id/f_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bet Due"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/f_discover"
                style="@style/loginButton"
                android:layout_height="30dp"
                android:layout_width="360dp"
                android:backgroundTint="@color/grey_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:text="Discover"
                app:initialCornerAngle="27dp"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>