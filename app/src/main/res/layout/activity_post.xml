<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Normal.PostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Create a new Stream"
                android:textColor="@color/mainicolor"
                android:textSize="14dp" />


            <androidx.cardview.widget.CardView
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:textSize="13dp"
                        android:id="@+id/stream_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="10dp"
                        android:maxLength="100"
                        android:inputType="text"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Stream Tittle - Maximum 100 characters"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black" />

                    <EditText
                        android:textSize="13dp"
                        android:id="@+id/stream_description"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="top"
                        android:hint="Describe your stream here"
                        android:lines="7"
                        android:maxLines="20"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/kdk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <Button
                            android:textSize="13dp"
                            android:textAllCaps="false"
                            android:id="@+id/end_voting_window_button"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Voting Window-End"
                            android:textColor="@color/black" />

                        <Button
                            android:textSize="13dp"
                            android:layout_marginHorizontal="20dp"
                            android:id="@+id/cash_Day_Button"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="12dp"
                            android:text="Expected Cash-Out Date"
                            android:textColor="@color/black" />

                        <Button
                            android:visibility="gone"
                            android:textAllCaps="false"
                            android:id="@+id/closed_or_open"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Closed Or Open?"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/kdfgdk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/fragment_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:windowBackground"
                            android:orientation="horizontal">
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:visibility="gone"
                    android:id="@+id/profile_image"
                    android:layout_width="76dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="2dp"
                    android:src="@drawable/personb"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Max Streamers"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <com.travijuu.numberpicker.library.NumberPicker
                        android:id="@+id/number_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="40dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        app:custom_layout="@layout/number_picker_custom_layout"
                        app:max="900000"
                        app:min="0"
                        app:unit="1"
                        app:value="900000" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>