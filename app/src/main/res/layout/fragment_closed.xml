<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Normal.PostActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Closed Stream"
                android:textColor="@color/mainicolor"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainicolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="In Closed Ended Streams you have up to 4 options which are set by you and people can bet on."
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/kdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/grey_60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:weightSum="2" />

            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="10dp"
                android:weightSum="3"
                android:background="#A9A9A9"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/atext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="A"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/question_Mark_A"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/questionmark"
                            android:layout_width="50dp"
                            android:layout_height="20dp"/>

                        <Button
                            android:textAllCaps="false"
                            android:layout_height="30dp"
                            android:layout_width="90dp"
                            android:background="@color/mainicolor"
                            android:textColor="@color/white"
                            android:id="@+id/save_A"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:layout_marginBottom="0dp"
                            android:text="Select A"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/atetxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="B"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/question_Mark_B"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/questionmark"
                            android:layout_width="50dp"
                            android:layout_height="20dp"/>

                        <Button
                            android:textAllCaps="false"
                            android:layout_height="30dp"
                            android:layout_width="90dp"
                            android:background="@color/mainicolor"
                            android:textColor="@color/white"
                            android:id="@+id/save_B"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:layout_marginBottom="0dp"
                            android:text="Select B"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ateext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="C"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/question_Mark_C"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/questionmark"
                            android:layout_width="50dp"
                            android:layout_height="20dp"/>

                        <Button
                            android:textAllCaps="false"
                            android:layout_height="30dp"
                            android:layout_width="90dp"
                            android:background="@color/mainicolor"
                            android:textColor="@color/white"
                            android:id="@+id/save_C"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:layout_marginBottom="0dp"
                            android:text="Select C"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/atdext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="D"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/question_Mark_D"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/questionmark"
                            android:layout_width="50dp"
                            android:layout_height="20dp"/>

                        <Button
                            android:textAllCaps="false"
                            android:layout_height="30dp"
                            android:layout_width="90dp"
                            android:background="@color/mainicolor"
                            android:textColor="@color/white"
                            android:id="@+id/save_D"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:layout_marginBottom="0dp"
                            android:text="Select D"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_A"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:maxLength="70"
                            android:id="@+id/closed_edit_A"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight=".75"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Option A - Max 70 "
                            android:textSize="13dp"
                            android:paddingLeft="6dp"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="50dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:textAllCaps="false"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/register_A"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:text="Save A"/>

                            <Button
                                android:textAllCaps="false"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/remove_A"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:text="Remove A"/>

                        </LinearLayout>

                        <Button
                            android:visibility="gone"
                            android:layout_height="30dp"
                            android:layout_width="200dp"
                            android:background="@color/black"
                            android:textColor="@color/white"
                            android:id="@+id/mychoice"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:layout_marginBottom="20dp"
                            android:text="Select My Choice"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/layout_B"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/closed_edit_B"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".75"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Option B"
                            android:textSize="13dp"
                            android:paddingLeft="6dp"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="50dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/register_B"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Save B"/>

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/remove_B"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Remove B"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/layout_C"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/closed_edit_C"
                            android:layout_width="match_parent"
                            android:textSize="13dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".75"
                            android:background="@drawable/rounded_edittext"
                            android:hint="Option C"
                            android:paddingLeft="6dp"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="50dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/register_C"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Save C"/>

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/remove_C"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Remove C"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/layout_D"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/closed_edit_D"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".75"
                            android:background="@drawable/rounded_edittext"
                            android:textSize="13dp"
                            android:hint="Option D"
                            android:paddingLeft="6dp"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="50dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/register_D"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Save D"/>

                            <Button
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:layout_height="30dp"
                                android:layout_width="90dp"
                                android:background="@color/mainicolor"
                                android:textColor="@color/white"
                                android:id="@+id/remove_D"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/loginViewsMargin"
                                android:layout_marginBottom="0dp"
                                android:text="Remove D"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainicolor" />


            <androidx.cardview.widget.CardView
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <Button
                        android:layout_height="30dp"
                        android:layout_width="290dp"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:id="@+id/submit_Bet"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:layout_marginBottom="20dp"
                        android:text="Submit Stream"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>