<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLaysout_Options"
    style="android.R.style.Theme_Black_NoTitleBar_Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Description"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/bottom_actual_Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="No Description"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:paddingTop="0dp"
                    android:id="@+id/linearLyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:weightSum="2">

                    <TextView
                        android:paddingTop="5dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/bottom_due_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/calendar"
                        android:drawablePadding="7dp"
                        android:text="Due: "
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <TextView
                        android:paddingTop="5dp"
                        android:id="@+id/bottom_payment_on_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/cash"
                        android:drawablePadding="3dp"
                        android:paddingBottom="5dp"
                        android:text="Payment On: "
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/gfh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/bottom_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawablePadding="3dp"
                        android:paddingVertical="10dp"
                        android:text="Type: "
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/lineardsfLyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:text="Select An Option to Join Bet -> Swap Right For Other Options"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_options"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:layout_height="170dp"
                        android:layout_marginBottom="20dp"
                        android:paddingBottom="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/fgdfd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Bets Made"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingHorizontal="5dp"
                        android:id="@+id/recycler_view_Bets"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:id="@+id/view_all_bets_Made"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/view_all_bets"
                        android:textColor="@color/red_400"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/close_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:id="@+id/ayeya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/agotta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="What's your bet option?"
                        android:textColor="@color/mainicolor"
                        android:textSize="15dp" />


                    <EditText
                        android:id="@+id/place_your_bet_open_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Option A"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="50dp"
                        android:weightSum="2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/fgdasdfasdfd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/amount_placed_for_the_bet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="40dp"
                        android:hint="Amount you are placing for the bet"
                        android:inputType="number"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/thebet_submition"
                        style="@style/loginButton"
                        android:layout_width="380dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:text="Join And Bet"
                        app:initialCornerAngle="27dp"
                        android:layout_marginBottom="40dp"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>