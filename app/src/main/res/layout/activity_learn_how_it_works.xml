<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="10dp"
    android:elevation="20dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="10dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:paddingBottom="10dp"
                android:id="@+id/lintrghfeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingHorizontal="3dp">


                <TextView
                    android:id="@+id/c_Namdfde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Terms"
                    android:textColor="@color/mainicolor"
                    android:textSize="13dp" />


                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/terms_of_Service"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/grey_40"
                    android:text="Our Terms Of Service"
                    android:textAllCaps="false"
                    app:initialCornerAngle="27dp"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />


                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/goToMainActivity"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="10dp"
                    android:text="Proceed To Main Page"
                    android:textAllCaps="false"
                    app:initialCornerAngle="27dp"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="20dp"
            android:elevation="20dp"
            android:layout_marginVertical="30dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/lineat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="3dp">


                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/watch_Video"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="10dp"
                    android:text="Watch Video"
                    android:textAllCaps="false"
                    app:initialCornerAngle="27dp"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />

                <TextView
                    android:id="@+id/c_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="How To Bet"
                    android:textColor="@color/mainicolor"
                    android:textSize="13dp" />

                <TextView
                    android:paddingHorizontal="5dp"
                    android:id="@+id/how_To_Bet_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:text="How to Bet Instructions"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>