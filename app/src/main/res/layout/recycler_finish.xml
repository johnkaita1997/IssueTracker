<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="10dp"
    android:elevation="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="3dp">


        <LinearLayout
            android:id="@+id/linearLadfyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingVertical="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/finish_bettername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beetter Name"
                            android:textColor="@color/mainicolor"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:id="@+id/finish_bettermobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Better Mobile"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/finish_betteremail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:text="Better Email"
                            android:textColor="@color/mainicolor"
                            android:textSize="13dp" />


                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:id="@+id/finish_betteramount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Better Amount"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/finish_betterchoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:text="Better Choice"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:id="@+id/finish_wonorlost"
                            android:layout_width="wrap_content"
                            android:paddingBottom="5dp"
                            android:layout_height="wrap_content"
                            android:text="Won or Lost"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>