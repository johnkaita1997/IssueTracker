<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout_Options"
    style="android.R.style.Theme_Black_NoTitleBar_Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">

                    <TextView
                        android:id="@+id/youtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Title"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/yourdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="No Description"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/linearLyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <TextView
                        android:paddingTop="4dp"
                        android:id="@+id/yourdue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/calendar"
                        android:drawablePadding="3dp"
                        android:text="Due: "
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />
                        android:background="@color/black" />

                    <TextView
                        android:paddingTop="4dp"
                        android:id="@+id/yourpaymenton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/cash"
                        android:drawablePadding="3dp"
                        android:paddingBottom="5dp"
                        android:text="Payment On: "
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/lineardsfLyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Select The Marked Answer"
                        android:textColor="@color/mainicolor"
                        android:textSize="14dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_options_profile"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/fgdfd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">


                    <LinearLayout
                        android:id="@+id/asdf"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="3dp"
                        android:weightSum="4">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/yourbetters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="3dp"
                            android:text="No of betters"
                            android:textColor="@color/mainicolor"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <TextView
                            android:gravity="center"
                            android:id="@+id/yourContribution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="3dp"
                            android:paddingBottom="5dp"
                            android:text="Your_Contribution"
                            android:textColor="@color/mainicolor"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <TextView
                            android:gravity="center"
                            android:id="@+id/yourstreamamounttotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="3dp"
                            android:paddingBottom="5dp"
                            android:text="Total Stream"
                            android:textColor="@color/mainicolor"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <TextView
                            android:gravity="center"
                            android:id="@+id/yourstreamtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="3dp"
                            android:paddingBottom="5dp"
                            android:text="The Stream Type"
                            android:textColor="@color/mainicolor"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_marginVertical="10dp"
                        android:id="@+id/yourallbets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="View all Betters"
                        android:textColor="@color/red_400"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/close_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:id="@+id/fgdasdfasdfd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp"
                    android:weightSum="2">

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/place_your_bet_open_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".75"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Option A"
                        android:inputType="text"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black" />

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/shareStream"
                        style="@style/loginButton"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Share Stream"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/yourclosestream"
                        style="@style/loginButton"
                        android:layout_width="380dp"
                        android:backgroundTint="@color/black"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="20dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="40dp"
                        android:text="Close Stream"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>